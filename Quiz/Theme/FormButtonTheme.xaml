<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}" x:Key="FormButtonTheme">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" HorizontalAlignment="Left" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <TextBlock FontSize="12" Foreground="#36454F" Text="{TemplateBinding Property=Content}" VerticalAlignment="Center" Padding="10,5,10,5" TextDecorations="{TemplateBinding TextBlock.TextDecorations}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#E5E4E2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="TextBlock.TextDecorations" Value="None"/>
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#D3D3D3"/>
                <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                <Setter Property="BorderBrush" Value="#36454F"/>
            </Trigger>
        </Style.Triggers>
        
    </Style>
</ResourceDictionary>