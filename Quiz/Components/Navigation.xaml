<UserControl x:Class="Quiz.Components.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quiz.Components"
             xmlns:viewModel="clr-namespace:Quiz.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <RadioButton IsChecked="True" Command="{Binding NavigateGeneratorCommand}" Content="Generator" Style="{StaticResource MenuButtonTheme}"/>
        <RadioButton Command="{Binding NavigateQuizzesCommand}"  Content="Quizzes" Style="{StaticResource MenuButtonTheme}"/>
    </StackPanel>
</UserControl>
